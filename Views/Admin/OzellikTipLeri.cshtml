
@{
    ViewData["Title"] = "Ozellik TipLeri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Eticaret.MvcWebUI.Models.OzellikTip>

<section class="panel">

    <header class="panel-heading">
        Özellikler
    </header>

    <div class="panel-body">
        <div class=" editable-table adv-table">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="~/Admin/OzellikTipEkle" class="btn btn-success">
                        Yeni Özellik Tipi <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
        </div>

        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">

            <thead>
                <tr>
                    <th>Özellik Tip Adı</th>
                    <th>Açıklama</th>
                    <th>Kategorisi</th>
                    <th>Güncelle</th>
                    <th>Sil</th>




                </tr>
            </thead>
            <tbody>
                @foreach (var tip in Model)
                {
                    <tr class="">


                        <td>@Html.DisplayFor(modelItem => tip.OzellikAdi)</td>
                        <td>@Html.DisplayFor(modelItem => tip.OzellikAcıklama)</td>
                        <td>
                           @if (tip.KategoriId != null)
                            {

                                @Html.DisplayFor(modelItem => tip.Kategori.KategoriTür)

                            }
                        </td>
                        

                        <td>
                            <a class="edit" href="~/Admin/OzellikTipDuzenle/@tip.OzellikId">
                                <i class="icon-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <a class="delete" href="~/Admin/OzellikTipSil/@tip.OzellikId
                               ">
                                <i class="icon-trash"></i>
                            </a>
                        </td>

                    </tr>


                }


            </tbody>
        </table>
    </div>




</section>

