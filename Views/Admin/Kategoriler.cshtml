
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Eticaret.MvcWebUI.Models.Kategori>

<section class="panel">

    <header class="panel-heading">
        Kategoriler
    </header>

    <div class="panel-body">
        <div class=" editable-table adv-table">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="~/Admin/KategoriEkle" class="btn btn-success">
                        Yeni Kategori <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
        </div>

        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">

            <thead>
                <tr>
                    <th>Kategori Id</th>
                    <th>Kategori Adı</th>
                    <th>Güncelle</th>
                    <th>Sil</th>




                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="">


                        <td>@Html.DisplayFor(modelItem => item.KategoriId)</td>
                        <td>@Html.DisplayFor(modelItem => item.KategoriTür)</td>
                        
                       


                        <td>
                            <a class="edit" href="~/Admin/KategoriDuzenle/@item.KategoriId">
                                <i class="icon-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <a class="delete" href="~/Admin/KategoriSil/@item.KategoriId">
                               
                                <i class="icon-trash"></i>
                            </a>
                        </td>

                    </tr>


                }


            </tbody>
        </table>
    </div>




</section>