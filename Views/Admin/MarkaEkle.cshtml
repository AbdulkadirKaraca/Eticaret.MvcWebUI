
@{
    ViewData["Title"] = "Marka Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Eticaret.MvcWebUI.Models.Marka
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Marka Ekle
            </header>
            <div class="panel-body">
                <form action="~/Admin/MarkaEkle" class="form-horizontal tasi-form" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Marka Adı</label>
                        <div class="col-sm-10">
                            <input name="MarkaAdi" type="text" class="form-control">
                            
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-3">Marka Logosu</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i>Resim Seç</span>

                                    <input type="file" name="MarkaLogo" class="default" />
                                    
                                </span>

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" value="Create" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>
