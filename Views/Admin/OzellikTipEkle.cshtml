@model Eticaret.MvcWebUI.Models.OzellikTip

@{
    ViewData["Title"] = "OzellikTipEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>OzellikTipEkle</h2>

<h4>OzellikTip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OzellikTipEkle" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OzellikAdi" class="control-label"></label>
                <input asp-for="OzellikAdi" class="form-control" />
                <span asp-validation-for="OzellikAdi" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                <div class="col-sm-10">
                    <input name="OzellikAcıklama" type="text" class="form-control">

                </div>
            </div>

            <select class="form-control m-bot15" name="KategoriId">
                @foreach (var kategori in ViewBag.Kategoriler)
                {
                    <option value="@kategori.KategoriId">@kategori.KategoriTür</option>
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

