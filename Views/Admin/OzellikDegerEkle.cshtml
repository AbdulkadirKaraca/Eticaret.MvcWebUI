
@{
    ViewData["Title"] = "Özellik Deger Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Eticaret.MvcWebUI.Models.OzellikTip>
<div class="row">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Özellik Tipi Ekle
                </header>
                <div class="panel-body">
                    <form action="~/Admin/OzellikDegerEkle" class="form-horizontal tasi-form" method="post" enctype="multipart/form-data">
                        <select class="form-control m-bot15" name="OzellikTipId">
                            @foreach (var tip in ViewBag.OzellikTipleri)
                            {
                                <option value="@tip.OzellikId">@tip.OzellikAdi</option>
                            }
                        </select>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Özellik Adı</label>
                            <div class="col-sm-10">
                                <input name="OzellikDegerAdi" type="text" class="form-control">

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Özellik Açıklaması</label>
                            <div class="col-sm-10">
                                <input name="OzellikDegerAcıklama" type="text" class="form-control">

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>

        </div>
    </div>
</div>

